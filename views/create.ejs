<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs') %>
<body>
    <%- include('./partials/nav.ejs') %>
                <div class="create-blog content">
                        <% if (typeof error !== 'undefined') { %>
                            <div style="background:#ffefef;padding:10px;border-radius:8px;color:#8b1c1c;margin-bottom:12px">⚠️ <%= error %></div>
                        <% } %>
                        <form action="/blogs" method="POST">
                <label for="title">Blog Title:</label>
                <input type="text" id="title" name="title" value="<%= typeof titleValue !== 'undefined' ? titleValue : '' %>" required>
                <label for="snippet">Blog Snippet:</label>
                <input type="text" id="snippet" name="snippet" value="<%= typeof snippetValue !== 'undefined' ? snippetValue : '' %>" required>
                <label for="body">Blog Body:</label>
                <textarea id="body" name="body" required><%= typeof bodyValue !== 'undefined' ? bodyValue : '' %></textarea>
                <button>Submit</button>
            </form>
        </div>
        <%- include('./partials/footer.ejs') %>
    </body>
</html>