<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs') %>
<body>
       <%- include('./partials/nav.ejs') %>
                <div class="blog content">
                        <% if (typeof error !== 'undefined') { %>
                            <div style="background:#fff7c2;color:#6f4a00;padding:10px;border-radius:8px;margin-bottom:10px;">⚠️ <%= error %></div>
                        <% } %>
                        <h2>All Blogs</h2>
            <% if (blogs.length >0) { %>
                <%  blogs.forEach((blog, idx) => { %>
                    <a class="single card" href="/blogs/<%= blog._id %>" style="display:block;text-decoration:none;color:inherit">
                        <h3 class="title"><%= blog.title %></h3>
                        <div class="snippet"><%= blog.snippet %></div>
                    </a>
                <% }) %>
            <% } else { %>
                 <p>There are no blogs to display</p>
           <%  } %>
        </div>
        <%- include('./partials/footer.ejs') %>
    </body>
</html>






